<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_19tracker">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AboutDeveloper"
            android:label="About Developer"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".FAQ"
            android:label="FAQ"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Myths"
            android:label="Myths"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SymptomChecker"
            android:label="Symptom Checker"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TestCenters"
            android:label="Test Centers"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Statistics"
            android:label="Statistics"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MessagingActivity"
            android:label="Helpline Numbers"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CallingActivity"
            android:label="Helpline Numbers"
            android:parentActivityName=".FirstPage_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FirstPage_Activity"
            android:label="@string/title_activity_first_page_"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>